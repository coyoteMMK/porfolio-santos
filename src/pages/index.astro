---
import Layout from "../layouts/Layout.astro";
import ProfileCheck from "../components/icons/ProfileCheck.astro";
import Hero from "../components/Hero.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import MaletinIcon from "../components/icons/Maletin.astro";
import CodeIcon from "../components/icons/Code.astro";
import Proyects from "../components/Proyects.astro";
import TitleSection from "../components/TitleSection.astro";
import Aboutme from "../components/Aboutme.astro";
---

<Layout
	title="Portfolio de Santos Bernabeu - Desarrollador y programador web"
	description="Contrata a Santos Bernabeu, un desarrollador web con más de 15 años de experiencia en la creación de aplicaciones únicas y contenido digital. Con una sólida formación en programación y un enfoque en la innovación, Santos está listo para llevar tu proyecto al siguiente nivel."
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<Hero />
		</SectionContainer>

		<div class="space-y-24">
			<SectionContainer id="experiencia">
				<TitleSection>
					<MaletinIcon class="size-8" />
					Experiencia laboral
				</TitleSection>
				<Experience />
			</SectionContainer>

			<SectionContainer id="proyectos">
				<TitleSection>
					<CodeIcon class="size-7" />
					Proyectos
				</h2>
				</TitleSection>
				<Proyects />
			</SectionContainer>

			<SectionContainer id="sobre-mi">
				<TitleSection>
					<ProfileCheck class="size-8" />
					Sobre mí
				</h2>
				</TitleSection>
				<Aboutme/>
			</SectionContainer>
		</div>
	</main>
</Layout>

---
import Topicon from "./icons/Top.astro";
---

<a
  href="#"
  role="link"
  class="hover:scale-105 Top-button efecto-cristal text-gray-800 dark:text-blue-200 bg-transparent fixed bottom-6 right-6 z-50 p-3 rounded-full shadow-lg"
>
  <Topicon class="fade-in-up-icon size-6" />
</a>

<style>
  .efecto-cristal::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    border-radius: inherit;
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
    filter: url(#glass-distortion);
    -webkit-filter: url(#glass-distortion);
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

</style>
